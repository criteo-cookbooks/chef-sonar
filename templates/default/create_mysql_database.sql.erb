#
# Create Sonar database and user.
# Generated by Chef. Local modifications will be overwritten.
#
# Command: mysql -u root -p < create_database.sql
#

CREATE DATABASE IF NOT EXISTS sonar CHARACTER SET utf8 COLLATE utf8_general_ci;

GRANT ALL ON sonar.* TO '<%= node['sonar']['properties']['sonar.jdbc.username'] %>'@'localhost' IDENTIFIED BY '<%= node['sonar']['properties']['sonar.jdbc.password'] %>';
GRANT ALL ON sonar.* TO '<%= node['sonar']['properties']['sonar.jdbc.username'] %>'@'%' IDENTIFIED BY '<%= node['sonar']['properties']['sonar.jdbc.password'] %>';
FLUSH PRIVILEGES;
